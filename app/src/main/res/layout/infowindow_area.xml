<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tap_to_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Area Info"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/area_image"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:maxHeight="100dp"
        android:layout_gravity="center"
        android:padding="5dp"
        app:srcCompat="@drawable/san_fran" />

    <LinearLayout
        android:id="@+id/description_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_severity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Severity:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_people_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Num People:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Address:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_building_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Area Type:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_building_year_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Area Year:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Updated:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/data_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CRITICAL" />

            <TextView
                android:id="@+id/text_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="500" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="47 Fake Road"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/text_building_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Apartment" />

            <TextView
                android:id="@+id/text_building_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1995" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="03/05/18 15:35:03" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/utilities_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Utility Status:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/utilties_gas_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Gas:" />

                <TextView
                    android:id="@+id/utilties_water_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Water:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/utilties_gas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_red_24dp" />

                <ImageView
                    android:id="@+id/utilties_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_red_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/utilities_sewage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Sewage:" />

                <TextView
                    android:id="@+id/utilties_electricity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Electricity:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/utilities_sewage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_red_24dp" />

                <ImageView
                    android:id="@+id/utilties_electricity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_red_24dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
