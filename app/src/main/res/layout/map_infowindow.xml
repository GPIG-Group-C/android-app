<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tap_to_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Incident Info"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/description_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_severity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Severity:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_people_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Num People:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Address:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_reported_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Reported by:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Reported at:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_additional_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/title_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="CRITICAL" />

            <TextView
                android:id="@+id/text_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="500" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="47 Fake Road" />

            <TextView
                android:id="@+id/text_reported"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="First Responder" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="03/05/18 15:35:03" />

            <TextView
                android:id="@+id/text_additional_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                tools:text="People trapped first floor"
                android:maxLines="3" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/building_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/building_info_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Building Info:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/building_info_container_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/building_info_title"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_building_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Building Type:"
                    android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

                <TextView
                    android:id="@+id/text_building_year_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Building Year:"
                    android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/building_info_container_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/building_info_container_left"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/building_info_container_left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_building_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="hello" />

                <TextView
                    android:id="@+id/text_building_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="hello" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/utilities_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Utility Status:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/utilties_gas_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gas: "
            android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

        <Switch
            android:id="@+id/utilties_water_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Water: "
            android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

        <Switch
            android:id="@+id/utilties_electricity_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electricity: "
            android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

        <Switch
            android:id="@+id/utilties_sewage_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sewage: "
            android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

    </LinearLayout>

    <TextView
        android:id="@+id/tap_to_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tap to Update..."
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
