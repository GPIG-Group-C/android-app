<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/tap_to_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Incident Info"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_severity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Severity:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_building_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building Type:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_building_year_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building Year:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_risk_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Further Risk:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/title_layout"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_severity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hello" />

            <TextView
                android:id="@+id/text_building_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hello" />

            <TextView
                android:id="@+id/text_building_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hello" />

            <TextView
                android:id="@+id/text_risk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="hello" />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/tap_to_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tap to Update..."
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
