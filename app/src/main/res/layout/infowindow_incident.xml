<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/tap_to_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Incident Info"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/description_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Type:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Status:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_address_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Address:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_reported_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Reported by:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Reported at:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/utilties_medic_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="end"
                android:text="Medic Needed:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/utilities_danger_title"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="end"
                android:text="Danger:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

            <TextView
                android:id="@+id/text_additional_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Info:"
                android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/title_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Gas Leak" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="High" />

            <TextView
                android:id="@+id/text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end"
                tools:text="47 Fake Road" />

            <TextView
                android:id="@+id/text_reported"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="First Responder" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="03/05/18 15:35:03" />

            <ImageView
                android:id="@+id/medic_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_cancel_red_24dp" />

            <ImageView
                android:id="@+id/danger_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_cancel_red_24dp" />

            <TextView
                android:id="@+id/text_additional_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="30"
                android:ellipsize="end"
                tools:text="People trapped first floor" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/utilities_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Utility Status:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/utilties_gas_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Gas:" />

                <TextView
                    android:id="@+id/utilties_water_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Water:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/utilties_gas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_red_24dp" />

                <ImageView
                    android:id="@+id/utilties_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_red_24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/utilities_sewage_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Sewage:" />

                <TextView
                    android:id="@+id/utilties_electricity_title"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Electricity:" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/utilities_sewage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_red_24dp" />

                <ImageView
                    android:id="@+id/utilties_electricity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_red_24dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/tap_to_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Tap to Update..."
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
